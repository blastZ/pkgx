{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/utils": [
        "./src/utils/index.js"
      ],
      "@/interfaces": [
        "./src/interfaces/index.js"
      ],
      "@/commands": [
        "./src/commands/index.js"
      ],
      "@libs/pkgx-plugin-devkit": [
        "./libs/pkgx-plugin-devkit/src/index.js"
      ],
      "@libs/pkgx-plugin-npm": [
        "./libs/pkgx-plugin-npm/src/index.js"
      ],
      "@libs/pkgx-plugin-rollup": [
        "./libs/pkgx-plugin-rollup/src/index.js"
      ],
      "@libs/pkgx-plugin-docker": [
        "./libs/pkgx-plugin-docker/src/index.js"
      ],
      "@libs/pkgx-plugin-nest": [
        "./libs/pkgx-plugin-nest/src/index.js"
      ]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/output/**",
    "tests/projects/**"
  ]
}